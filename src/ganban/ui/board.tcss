/* BoardScreen */
BoardScreen {
    width: 100%;
    height: 100%;
    layout: vertical;
    layers: base overlay;
}
#board-header {
    width: 100%;
    height: auto;
    background: $primary;
    color: $text;
}
#board-title {
    width: 1fr;
}
#board-settings {
    width: auto;
    height: 1;
    padding: 0 1;
}
#board-settings:hover {
    background: $primary-darken-2;
}
#columns {
    width: 100%;
    height: 1fr;
    overflow: auto;
}
