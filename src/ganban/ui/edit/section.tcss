/* SectionEditor */
SectionEditor {
    width: 100%;
    height: auto;
}
SectionEditor > .section-heading-row {
    width: 100%;
    height: auto;
    border-bottom: solid $primary-darken-2;
}
SectionEditor .section-heading {
    width: 1fr;
    height: auto;
    text-style: bold;
}
SectionEditor .section-heading > ContentSwitcher > Static {
    text-style: bold;
}
SectionEditor .section-editor-select {
    width: auto;
    height: 1;
    padding: 0 1;
}
SectionEditor .section-editor-select:hover {
    background: $primary-darken-2;
}
SectionEditor .section-delete {
    width: auto;
    height: 1;
    padding: 0 0 0 1;
}
SectionEditor > .section-body {
    height: auto;
    min-height: 3;
}
SectionEditor > .section-body #view {
    padding: 0;
}
SectionEditor > .section-body #view MarkdownViewer {
    padding: 0;
    margin: 0;
}
SectionEditor > .section-body #view Markdown {
    padding: 0;
    margin: 0;
}
SectionEditor > .section-body #edit {
    height: auto;
}
